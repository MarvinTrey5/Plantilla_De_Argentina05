<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="#82B1FF">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="788dp"
        android:layout_height="423dp"
        android:layout_margin="10dp"
        android:foregroundGravity="center"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="11dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="779dp"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:padding="10dp">

            <TextView
                android:id="@+id/txPosicion"
                android:layout_width="145dp"
                android:layout_height="27dp"
                android:layout_marginTop="8dp"
                android:gravity="center"
                android:text="Posición"
                android:textSize="14dp"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.602"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txEquipo" />

            <TextView
                android:id="@+id/txDorsal"
                android:layout_width="176dp"
                android:layout_height="52dp"
                android:layout_marginTop="4dp"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Número de camiseta"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.676"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txPosicion" />

            <TextView
                android:id="@+id/txNacimiento"
                android:layout_width="267dp"
                android:layout_height="38dp"
                android:layout_marginTop="12dp"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Fecha de nacimiento"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.789"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txDorsal" />

            <TextView
                android:id="@+id/txNacionalidad"
                android:layout_width="226dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Nacionalidad"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txNacimiento" />

            <ImageView
                android:id="@+id/ImagenJugador"
                android:layout_width="207dp"
                android:layout_height="165dp"
                android:foregroundGravity="center"
                android:padding="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.332"
                app:layout_constraintStart_toStartOf="parent"
                tools:layout_editor_absoluteY="61dp" />

            <TextView
                android:id="@+id/txNombre"
                android:layout_width="244dp"
                android:layout_height="44dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:gravity="left|center"
                android:padding="10dp"
                android:text="Nombre del jugador"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.738"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txEquipo"
                android:layout_width="230dp"
                android:layout_height="40dp"
                android:layout_below="@id/ImagenJugador"
                android:gravity="left"
                android:padding="10dp"
                android:text="Equipo al que pertenece"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.73"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txNombre" />

            <View
                android:id="@+id/divider"
                android:layout_width="600dp"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="?android:attr/listDivider"
                android:backgroundTint="#190A0A"
                android:backgroundTintMode="add"
                app:layout_constraintTop_toBottomOf="@+id/txNacionalidad"
                tools:layout_editor_absoluteX="193dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>